<Project Sdk="Microsoft.NET.Sdk.Razor">
    <PropertyGroup>
        <OutputType>Library</OutputType>
        <Version>7.0.1</Version>
        <TargetFramework>net7.0</TargetFramework>
        <AssemblyName>Aiursoft.Identity</AssemblyName>
        <RootNamespace>Aiursoft.Identity</RootNamespace>
        <IsTestProject>false</IsTestProject>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <IsPackable>true</IsPackable>
        <ImplicitUsings>enable</ImplicitUsings>
        <Company>Aiursoft</Company>
        <Product>AiursoftWeb</Product>
        <Authors>Anduin</Authors>
        <Description>The base class, tools and extends for Aiursoft web apps with Aiursoft authentication.</Description>
        <PackageId>Aiursoft.Identity</PackageId>
        <PackageTags>base-class shared-component aiursoft Identity</PackageTags>
        <PackageProjectUrl>https://gitlab.aiursoft.cn/Aiursoft/Infrastructures</PackageProjectUrl>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://gitlab.aiursoft.cn/Aiursoft/Infrastructures.git</RepositoryUrl>
        <PackageIcon>Identity.png</PackageIcon>
        <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    </PropertyGroup>
    <ItemGroup>
        <None Include="Identity.png" Pack="true" PackagePath="\" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="7.0.10" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="7.0.0" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\SDK\Aiursoft.SDK.csproj" />
        <ProjectReference Include="..\..\Infrastructure\Probe.SDK\Aiursoft.Probe.SDK.csproj" />
    </ItemGroup>
</Project>