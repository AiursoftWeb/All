@{
    ViewData["Title"] = null;
}
<header class="masthead text-white text-center www-back" style="background: url('/img/back.svg') #184685 no-repeat center center; background-size: cover;">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5 www-shadow">@Values.ProjectName @Localizer["Search"]</h1>
            </div>
            <div class="col-lg-9 col-md-10 col-xl-11 mx-auto">
                <form class="form-row" asp-controller="Search" asp-action="DoSearch" method="get">
                    <div class="col-12 col-md-9 mb-2 mb-md-0">
                        <input type="search" results="7" autosave="www-search-input" list="auto-complete" name="q" class="form-control form-control-lg" autofocus required pattern=".*\S+.*" title="This field is required" placeholder="@Localizer["Search the web..."]">
                        <datalist id="auto-complete"></datalist>
                    </div>
                    <div class="col-12 col-md-3">
                        <button type="submit" class="btn btn-block btn-lg btn-primary">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>

