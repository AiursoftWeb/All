@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SocialViewModel
@{
    ViewData["Title"] = "Social accounts";
}
<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Account" asp-action="Index">@Localizer["Management Center"]</a>
        </li>
        <li class="breadcrumb-item active">
            @ViewData["Title"]
        </li>
    </ol>
    @if (Model.JustHaveUpdated)
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">@Localizer["x"]</span>
            </button>
            <strong>@Localizer["Well done!"]</strong> @Localizer["You have successfully updated your profile."]
        </div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">@Localizer["x"]</span>
            </button>
            <strong>@Localizer["Invalid Input!"]</strong>
            <div asp-validation-summary="All"></div>
        </div>
    }
    <div class="col-md-10 pl-0">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-lock"></i>
                @Localizer["Social accounts"]
            </div>
            <div class="card-body">
                <p>
                    You have @Model.Accounts.Count() third-party accounts linked to your Aiursoft account.
                </p>
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var provider in Model.Providers.Where(t => t.IsEnabled()))
                {
                    var main = Model.Accounts.FirstOrDefault(t => t.ProviderName == provider.GetName());
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-8 d-flex">
                                <i class="@provider.GetButtonIcon() fa-3x mr-2 text-@provider.GetButtonColor()" style="width:40px; height:40px;"></i>
                                <div class="d-block ml-3">
                                    @if (main != null)
                                    {
                                        <h5>@provider.GetName() - @main.Name</h5>
                                        <p class="mb-1">
                                            <label>You have bound your Aiursoft account with @provider.GetName(). Bind time:</label>
                                            <lable class="text-muted" data-utc-time="@main.BindTime"></lable>
                                        </p>
                                    }
                                    else
                                    {
                                        <h5>@provider.GetName()</h5>
                                        <p class="text-muted mb-1">
                                            You did not bind your account with @provider.GetName().
                                        </p>
                                    }
                                    <br>

                                </div>
                            </div>
                            <div class="col-4">
                                @if (main != null)
                                {
                                    <button class="btn btn-sm btn-outline-danger float-right mr-1 mt-3 text-danger" onclick="UnbindAccount('@provider.GetName()')">@Localizer["Unlink"]</button>
                                    <a class="btn btn-sm btn-secondary float-right mr-1 mt-3 text-white" href="@provider.GetSettingsPage()" target="_blank">@Localizer["View in"] @provider.GetName()</a>
                                }
                                else
                                {
                                    <a class="btn btn-sm btn-outline-success float-right mr-1 mt-3 text-success" href="@provider.GetBindRedirectLink()">@Localizer["Bind now"]</a>
                                }
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>