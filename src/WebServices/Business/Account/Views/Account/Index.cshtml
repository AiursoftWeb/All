@model IndexViewModel
@{
    ViewData["Title"] = "Basic Info";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Account" asp-action="Index">@Localizer["Management Center"]</a>
        </li>
        <li class="breadcrumb-item active">
            @ViewData["Title"]
        </li>
    </ol>
    @if (Model.JustHaveUpdated)
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">@Localizer["x"]</span>
            </button>
            <strong>@Localizer["Well done!"]</strong> @Localizer["You have successfully updated your profile."]
        </div>
    }
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">@Localizer["x"]</span>
            </button>
            <strong>@Localizer["Invalid Input!"]</strong>
            <div asp-validation-summary="All"></div>
        </div>
    }
    <div class="col-md-8 pl-0">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-pen-square"></i>
                @Localizer["Basic Info"]
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                        <form asp-controller="Account" asp-action="Index" method="post">
                            <div class="form-group">
                                <label asp-for="NickName"></label>
                                <input asp-for="NickName" class="form-control" type="text" placeholder="Enter your nick name...">
                                <span asp-validation-for="NickName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Bio"></label>
                                <textarea asp-for="Bio" class="form-control" placeholder="Enter a short description about you..." rows="3"></textarea>
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>
                            <button data-disable-with="Updating..." class="btn btn-success" type="submit">@Localizer["Update Profile"]</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>