@model Aiursoft.EE.Models.ProfileViewModels.SharedLeftContent
<div class="col-md-3" style="max-width:250px;">
    <div class="card mt-3 mb-3">
        <a class="card-body" href="@ServiceLocation.Account/Account/Avatar">
            <img class="rounded" src="@await ProbeLocator.GetProbeOpenAddressAsync(Model.UserIconFilePath)" style="width: 100px; height:100px;"/>
        </a>
        <div class="card-footer">
            <h5 class="text-center">@Model.UserNickName</h5>
        </div>
        <div class="card-footer">
            <i class="fa fa-envelope"></i>
            <a href="mailto:@Model.Email">@Model.Email</a>
        </div>
        @if (!Model.IsMe)
        {
            <div class="card-footer">
                @if (Model.AlreadyFollowed)
                {
                    <a class="btn btn-danger" id="follow" href="javascript:unFollow('@Model.UserId')" style="width:100%">
                        UnFollow
                    </a>
                }
                else
                {
                    <a class="btn btn-primary" id="follow" href="javascript:follow('@Model.UserId')" style="width:100%">
                        Follow
                    </a>
                }
            </div>
        }
    </div>
    <p class="muted">@Model.Bio</p>
    @if (Model.IsMe)
    {
        <a class="mb-5" asp-controller="Profile" asp-action="EditDes">Edit teacher introduction</a>
    }
</div>