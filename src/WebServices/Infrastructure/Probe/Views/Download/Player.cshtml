@model Aiursoft.Probe.ViewModels.DownloadViewModels.PlayerViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video player - @Model.Title</title>
    <link href="@ServiceLocation.UI/node_modules/video.js/dist/video-js.min.css" rel="stylesheet"/>
    <style>
        body {
            margin: 0;
            background-color: black;
            height: 100vh;
        }
    </style>
</head>

<body>
<video id="player" class="video-js vjs-default-skin vjs-big-play-centered vjs-fill" playsinline>
    <source src="@Html.Raw(Model.PlayUrl)">
</video>

<script src="@ServiceLocation.UI/node_modules/video.js/dist/video.min.js"></script>
<script>
        var player = videojs('player', {
            playbackRates: [0.25, 0.5, 0.75, 1, 1.25, 1.5, 1.75, 2, 3],
            fill: true,
            controls: true,
            autoplay: true,
            preload: 'auto'
        });
    </script>
</body>

</html>