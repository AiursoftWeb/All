<script>
    window.addEventListener('load', function () {
        var detectFileUpdateTimer = setInterval(detectFileUpdate, 100);

        function detectFileUpdate () {
            if ($(".icon-form [name=iconFile]").length > 0) {
                var value = $(".icon-form [name=iconFile]").attr('data-internet-path');
                if (value && value.length > 0) {
                    $(".icon-form [name=iconFile]").attr('data-internet-path', '');
                    $(".icon-form").submit();
                    clearInterval(detectFileUpdateTimer);
                }
            }
        };

        // View error stack trace modal
        $('#error-detail-modal').on('show.bs.modal', function (event) {
            var stacktrace = $(event.relatedTarget).data('stacktrace');
            var message = $(event.relatedTarget).data('message');
            var modal = $(this);
            modal.find('#modal-message').val(message);
            modal.find('#modal-stacktrace').text(stacktrace);
        });

        $('.datatable-sites').DataTable().destroy();
        $('.datatable-sites').DataTable({
            "pageLength": 15
        });

        $('.datatable-exception').DataTable().destroy();
        $('.datatable-exception').DataTable({
            "order": [[2, "desc"]]
        });

        $('.datatable-stargate').DataTable().destroy();
        $('.datatable-stargate').DataTable({
            "order": [[0, "desc"]]
        });

        $('.datatable-records').DataTable().destroy();
        $('.datatable-records').DataTable({
            "order": [[0, "desc"]]
        });
    });
</script>